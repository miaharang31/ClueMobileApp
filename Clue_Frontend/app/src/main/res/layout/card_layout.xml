<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/exit_card_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="2.25in"
        android:layout_marginTop=".05in"
        android:onClick="exitName"
        android:background="@drawable/exit_x" />

    <GridView
        android:layout_below="@+id/exit_card_btn"
        android:id="@+id/gridViewCards"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:horizontalSpacing="20dp"
        android:verticalSpacing="20dp"/>
</RelativeLayout>
