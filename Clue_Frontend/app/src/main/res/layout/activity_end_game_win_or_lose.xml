<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/endGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".GamePlay.Player.EndGameWinOrLose">

    <TextView
        android:id="@+id/winLose"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/abhaya_libre_extrabold"
        android:text="Congratulations! You solved the murder!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <ImageView
        android:id="@+id/suspect"
        android:layout_width="185dp"
        android:layout_height="245dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="205dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:srcCompat="@drawable/green" />

    <ImageView
        android:id="@+id/weapon"
        android:layout_width="185dp"
        android:layout_height="245dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:srcCompat="@drawable/wrench_card" />

    <ImageView
        android:id="@+id/room"
        android:layout_width="185dp"
        android:layout_height="245dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="470dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:srcCompat="@drawable/billiard_card" />
</androidx.constraintlayout.widget.ConstraintLayout>