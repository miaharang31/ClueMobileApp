<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/names"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#520120"
    tools:context=".Lobbies.Lobby">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="362dp"
        android:layout_height="556dp"
        android:backgroundTint="#962B09"

        app:cardCornerRadius="8dp"

        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.564"
        app:strokeColor="#B57114"
        app:strokeWidth="5dp">

        <TextView
            android:id="@+id/hostName"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="40dp"
            android:background="#08403E"
            android:text="Host:"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="60sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/startGame"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="480dp"
            android:layout_marginRight="100dp"
            android:backgroundTint="#08403E"
            android:text="Start Game"
            app:cornerRadius="5dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/playerName"
            android:layout_width="357dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name"
                android:layout_width="277dp"
                android:layout_height="49dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="200dp"
                android:backgroundTint="#B57114"
                android:hint="Player Name"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/host"
                android:layout_width="203dp"
                android:layout_height="55dp"
                android:layout_marginLeft="130sp"
                android:layout_marginTop="20sp"
                android:background="#08403E"
                android:hint="Host Name"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/currentplayertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="450dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/maxplayertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="450dp"
            android:layout_marginLeft="250dp"/>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>


