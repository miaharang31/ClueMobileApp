<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".HostLobby"
    android:background="#520120">


    <TextView
        android:id="@+id/lobbyCreation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aladin"
        android:text="H O S T"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.259" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="360dp"
        android:layout_height="288dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"

        android:backgroundTint="#962B09"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.564"
        app:strokeColor="#B57114"
        app:strokeWidth="5dp">

        <TextView
            android:id="@+id/maxPlayers"
            android:layout_width="360dp"
            android:layout_height="36dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/abhaya_libre_extrabold"
            android:text="Maximum Players"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/button4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button6"
            android:layout_width="56dp"
            android:layout_height="65dp"
            android:layout_marginLeft="284dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#08403E"
            android:text="6" />

        <Button
            android:id="@+id/button5"
            android:layout_width="56dp"
            android:layout_height="65dp"
            android:layout_marginLeft="196dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#08403E"
            android:text="5" />

        <Button
            android:id="@+id/button4"
            android:layout_width="56dp"
            android:layout_height="65dp"
            android:layout_marginLeft="108dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#08403E"
            android:text="4" />

        <Button
            android:id="@+id/button3"
            android:layout_width="56dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#08403E"
            android:text="3" />

        <Button
            android:id="@+id/lobbyCreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="230dp"
            android:backgroundTint="#B57114"
            android:text="Open Lobby" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="308dp"
            android:layout_height="48dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="155dp"
            android:layout_marginLeft="25dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Game Code" />
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>