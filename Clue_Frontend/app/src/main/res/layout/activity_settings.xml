<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#520120"
    tools:context=".administrative.Settings">

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="650dp"
        android:backgroundTint="#B57114"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/white"
        app:strokeWidth="20dp">

        <Button
            android:id="@+id/showUsers"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#08403E"
            android:fontFamily="@font/abhaya_libre"
            android:text="Show Users"
            android:textSize="40sp" />

        <Button
            android:id="@+id/showLobbies"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="150dp"
            android:backgroundTint="#08403E"
            android:fontFamily="@font/abhaya_libre"
            android:textSize="40sp"
            android:text="Show Lobbies" />

        <Button
            android:id="@+id/deleteUser"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="270dp"
            android:backgroundTint="#08403E"
            android:fontFamily="@font/abhaya_libre"
            android:textSize="40sp"
            android:text="Delete User" />

        <Button
            android:id="@+id/upgradeUser"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="390dp"
            android:backgroundTint="#08403E"
            android:fontFamily="@font/abhaya_libre"
            android:textSize="40sp"
            android:text="Upgrade User" />

        <Button
            android:id="@+id/viewCards"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="510dp"
            android:backgroundTint="#08403E"
            android:fontFamily="@font/abhaya_libre"
            android:textSize="40sp"
            android:text="View Cards" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
