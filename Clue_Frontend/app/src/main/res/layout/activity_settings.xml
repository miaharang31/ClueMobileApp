<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#520120"
    tools:context=".Settings">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="first name"
            android:textColor="@color/white"
            android:shadowColor="#520120"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="5"
            android:fontFamily="@font/abhaya_libre_extrabold"
            android:textSize="35dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_below="@id/name"
            android:text="username"
            android:textColor="@color/white"
            android:shadowColor="#520120"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="5"
            android:fontFamily="@font/abhaya_libre_extrabold"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/changeUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Username"
            android:background="#B57114"
            android:layout_below="@id/username"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/enteru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter new username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background="#08403E"
            android:layout_below="@id/changeUsername"/>
        <EditText
            android:id="@+id/newusername"
            android:layout_below="@id/enteru"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"/>
        <Button
            android:id="@+id/submitnewun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:background="#B57114"
            android:layout_below="@id/newusername"/>

        <Button
            android:id="@+id/changePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change password"
            android:background="#B57114"
            android:layout_below="@id/changeUsername"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/enterp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter new password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background="#08403E"
            android:layout_below="@id/changePassword"/>
        <EditText
            android:id="@+id/newpassword"
            android:layout_below="@id/enterp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"/>
        <Button
            android:id="@+id/submitnewp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:layout_marginTop="10dp"
            android:background="#B57114"
            android:layout_below="@id/newpassword"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>