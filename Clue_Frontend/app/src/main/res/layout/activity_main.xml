<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/relative_layout"
    android:background="#520120">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="0in"
        android:textColor="@color/white"
        android:shadowColor="#B57114"
        android:shadowDx="9"
        android:shadowDy="9"
        android:shadowRadius="2"
        android:fontFamily="@font/abhaya_libre_extrabold"
        android:textSize="150dp"
        android:text="Clue" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/textView2"
        android:fontFamily="@font/aladin"
        android:shadowColor="#B57114"
        android:shadowDx="9"
        android:shadowDy="9"
        android:shadowRadius="2"
        android:text="The Mobile Game"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:layout_below="@+id/textView"
        >

        <LinearLayout
            android:background="#B57114"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="10dp">

            <LinearLayout
                android:background="#B57114"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/loginText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abhaya_libre_extrabold"
                    android:text="LOGIN"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white"/>

                <TextView
                    android:id="@+id/firstNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/abhaya_libre_extrabold"
                    android:labelFor="@id/loginUsername"
                    android:text="Username"
                    android:textSize="20dp"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/loginUsername"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    />



                <TextView
                    android:id="@+id/passwordText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/abhaya_libre_extrabold"
                    android:labelFor="@id/loginPassword"
                    android:text="Password"
                    android:textSize="20dp"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/loginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPassword"
                    android:background="@color/white"
                    />

                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#962B09"
                    android:fontFamily="@font/abhaya_libre_extrabold"
                    android:text="Login" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/testText"
                    android:layout_width="115dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/abhaya_libre_extrabold"
                    android:labelFor="@id/loginPassword"
                    android:text="New User?"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/NewPlayerLink"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="#962B09"
                    android:fontFamily="@font/abhaya_libre_extrabold"
                    android:text="SIGN UP" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>