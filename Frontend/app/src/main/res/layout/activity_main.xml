<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#520120"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/StandardButton"
        android:layout_width="274dp"
        android:layout_height="168dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:background="#B57114"
        android:backgroundTint="#B57114"
        android:text="Standard Game"
        android:textSize="20sp"
        app:backgroundTint="#B57114"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294" />

    <Button
        android:id="@+id/PremiumButton"
        android:layout_width="276dp"
        android:layout_height="150dp"
        android:background="#B57114"
        android:backgroundTint="#B57114"
        android:text="Premium Game"
        android:textSize="20sp"
        app:backgroundTint="#B57114"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.717" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose A Game"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/StandardButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>