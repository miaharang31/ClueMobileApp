<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#520120">

    <View
        android:id="@+id/view"
        android:layout_width="361dp"
        android:layout_height="391dp"
        android:background="#962B09"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.541" />

    <TextView
        android:id="@+id/numPlayers"
        android:layout_width="233dp"
        android:layout_height="34dp"
        android:text="Number of Players:"
        android:textColor="#FEFEFE"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.022" />

    <Button
        android:id="@+id/players3button"
        android:layout_width="93dp"
        android:layout_height="98dp"
        android:text="3"
        android:textSize="60sp"
        app:backgroundTint="#08403E"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.18" />

    <Button
        android:id="@+id/players4button"
        android:layout_width="98dp"
        android:layout_height="95dp"
        android:text="4"
        android:textSize="60sp"
        app:backgroundTint="#08403E"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.745"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.189" />

    <Button
        android:id="@+id/players5button"
        android:layout_width="93dp"
        android:layout_height="102dp"
        android:text="5"
        android:textSize="60sp"
        app:backgroundTint="#08403E"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.68" />

    <Button
        android:id="@+id/players6button"
        android:layout_width="99dp"
        android:layout_height="102dp"
        android:text="6"
        android:textSize="60sp"
        app:backgroundTint="#08403E"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.748"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.681" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="352dp"
        android:layout_height="53dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Game Code:" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/LobbyButton"
        android:layout_width="356dp"
        android:layout_height="51dp"
        android:text="Open Lobby"
        app:backgroundTint="#B57114"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />


</androidx.constraintlayout.widget.ConstraintLayout>